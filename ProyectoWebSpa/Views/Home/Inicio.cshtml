@model IEnumerable<ProyectoWebSpa.Entities.ProductoEnt>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h2 style="font-weight:bold; text-align:center;">Sección para comprar productos.</h2>
<br />
<p style="text-align:center">Luego de agregar el producto puedes ir a la pestaña "Pagar".</p>


<div class="row" style="margin-top:80px;">
    @if (ViewBag.MsjPantalla != null)
    {
        <div style="text-align:center" class="alert alert-warning" role="alert">
            @ViewBag.MsjPantalla
        </div>
    }


    <section class="page-section bg-light" id="portfolio">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item">
                            <a class="portfolio-link passDatos" data-bs-toggle="modal" href="#portfolioModal1" data-name="@item.Nombre"
                               data-desc="@item.Descripcion"
                               data-precio="@item.Precio"
                               data-Imagen="@item.Imagen">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                                </div>
                                <img class="img-fluid" src="@item.Imagen" alt="..." />
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-heading">@item.Nombre</div>
                                <a href="@Url.Action("AgregarCursoCarrito", "Carrito", new { q = item.IdProducto })" type="button" class="btn btn-primary btn-xl text-uppercase">Añadir al carrito</a>
                                <div class="portfolio-caption-subheading text-muted"></div>
                            </div>
                        </div>
                    </div>

                    <!--<div class="col-lg-3">

                        <div class="card" style="width: 100%;">


                        <img src="@item.Imagen" class="card-img-top" alt="..." />


                        <div class="card-body">

                        <h5 class="card-title">@item.Nombre</h5>

                        <p class="card-text">Descripcion: @item.Descripcion <br> Precio: $ @item.Precio</p>

                    <div style="text-align:center">

                        <a href="@Url.Action("AgregarCursoCarrito","Carrito", new { q = item.IdProducto })" style="font-weight:bold" type="button" class="btn btn-default">Añadir</a>-->
                    @*<button style="font-weight:bold" type="button" class="btn btn-default" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver Más</button>*@
                    <!--</div>

                        </div>


                        </div>

                        <br /><br />

                        </div>-->
                }
            </div>
        </div>
    </section>


</div>

    <div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="~/WebStyles/assets/img/close-icon.svg" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase" id="pTitulo"></h2>
                                <p class="item-intro text-muted" id="txtDesc"></p>
                                <img class="img-fluid d-block mx-auto" src="" alt="..." id="imgPreview" />

                                <h3 id="txtPrecio">Client:</h3>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        $(".passDatos").click(function () {
            $("#pTitulo").text($(this).attr('data-name'));
            $("#txtDesc").text($(this).attr('data-desc'));
            var imageUrl = $(this).attr('data-Imagen');
            $("#imgPreview").attr('src', imageUrl);
            $("#txtPrecio").text($(this).attr('data-precio'));

        })


    </script>


