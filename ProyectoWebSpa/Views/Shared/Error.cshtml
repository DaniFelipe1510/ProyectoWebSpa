@{
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}


<div id="layoutError">
    <div id="layoutError_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="text-center mt-4" style="color:white">
                            <img class="mb-4 img-error" src="~/WebStyles/assets/img/error.jpg" />
                            
                            <p class="lead">Se presentó un problema en el sistema</p>
                            <p class="lead">Contacte con el administrador</p>
                            <a href="@Url.Action("Login","Home")">
                                <i class="fa fa-reply"></i>
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    
</div>
