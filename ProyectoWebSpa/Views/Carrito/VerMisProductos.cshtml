@model IEnumerable<ProyectoWebSpa.Entities.CarritoEnt>

@{
    ViewBag.Title = "VerMisProductos";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}
<section class="page-section bg-light" id="team">
    <div class="row justify-content-center" style="margin-top:80px;">
        <div class="col-lg-10">

            @if (ViewBag.MsjPantalla != null)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            @if (Model.Count() == 0)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    No hay un historial a mostrar.
                </div>
            }
            else
            {

                <table class="table table-hover table-bordered">
                    <thead>
                        <tr style="text-align:center">
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Cantidad</th>
                            <th>Precio pagado</th>
                            <th>Fecha de pago</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td>@Math.Round(item.CantidadArticulos, 0)</td>
                                <td>@Math.Round(item.Precio, 2)</td>
                                <td>@item.FechaCarrito</td>

                            </tr>
                        }

                    </tbody>
                </table>

            }

        </div>
    </div>
    </section>

