@model IEnumerable<ProyectoWebSpa.Entities.ReservaEnt>

@{
    ViewBag.Title = "VerMisReservas";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<section class="page-section bg-light" id="team">
    <div class="row justify-content-center" style="margin-top:80px;">
        <div class="col-lg-10">

            <h4 style="text-align:center; color: black">Mis Reservas</h4>
            <br />

            @if (ViewBag.MsjPantalla != null)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            @if (Model.Count() == 0)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    No hay reservas a mostrar.
                </div>
            }
            else
            {

                <table class="table table-hover table-bordered">
                    <thead>
                        <tr style="text-align:center">
                            <th>Nombre</th>
                            <th>Duracion</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Precio</th>
                            <th>Cliente</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Duracion</td>
                                <td>@item.Fecha</td>
                                <td>@item.Hora</td>
                                <td>@item.PrecioPago</td>
                                <td>@item.Cliente</td>

                            </tr>
                        }

                    </tbody>
                </table>

            }

        </div>
    </div>
</section>
