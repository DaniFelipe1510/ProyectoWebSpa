@model ProyectoWebSpa.Entities.ReservaEnt


@{
    ViewBag.Title = "AgregarReserva";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}


@using (Html.BeginForm("RegistrarReserva", "Reserva", FormMethod.Post))
{

    <div class="row justify-content-center" style="margin-top:80px;">
        <div class="col-lg-5">

            <h4 style="text-align:center; color: black">Reservar</h4>
            <br />

            @if (@ViewBag.MsjPantalla != null)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            @Html.HiddenFor(model => model.IdServicio)
            @Html.HiddenFor(model => model.PrecioPago)
            <div class="card-body">
                <div class="form-floating mb-3">

                    @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", type = "date", id = "fecha" } })
                    <label for="inputFecha">Fecha</label>
                </div>
                <div class="form-floating mb-3">

                    @Html.EditorFor(model => model.Hora, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                    <label for="inputHora">Hora</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Cliente, new { @type = "text", @placeholder = "Cliente", @class = "form-control" })
                    <label for="inputCliente">Cliente</label>
                </div>
                @*<div class="form-floating mb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span style="height:60px" class="input-group-text">$</span>
                    </div>
                    @Html.TextBoxFor(m => m.Precio, new { @type = "number", @placeholder = "Precio", @class = "form-control" })
                </div>
            </div>*@

                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <a class="small"></a>
                    <button class="btn btn-primary" type="submit">Procesar</button>
                </div>

            </div>

        </div>
    </div>

}

